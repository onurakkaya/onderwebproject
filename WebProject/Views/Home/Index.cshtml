<div class="ftco-section-search">
    <div class="container">
        <div class="row">
            <div class="col-md-12 tabulation-search">
                <div class="element-animate">
                    <div class="nav nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link p-3 active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Üniversite Seç</a>

                    </div>
                </div>

                <div class="tab-content py-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                        <div class="block-17">
                            <form action="" method="post" class="d-block d-lg-flex">
                                <div class="fields d-block d-lg-flex">

                                    <p style="">Şehir Seçiniz</p>
                                    <div class="select-wrap one-third">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="" id="" class="form-control">

                                            @foreach (SehrimiTani.Entities.Sehirler item in CaracalSoft.Data.Repository<SehrimiTani.Entities.Sehirler>.ReadList())
                                            {
                                                <option value="@item.Id">@item.Sehiradi</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="select-wrap one-third">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="" id="" class="form-control">
                                            <option value="">Fırat Üniversitesi</option>
                                            <option value="">Ege Üniversitesi</option>
                                            <option value="">Dokuz Eylül Üniversitesi</option>

                                        </select>
                                    </div>
                                </div>
                                <input type="submit" class="search-submit btn btn-primary" value="Find Flights">
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

